---
import '@fontsource/poppins';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="An Ecommerce Site" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--color-primary: #473bf0;
		--color-black: #000500;
		--color-light: #6665DD;
		--color-gray: #9b9ece;
		--color-other-gray: #acadbc;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	
	body {
		margin: 0;
		padding: 0;
		line-height: 1.6;
		font-family: "Poppins", sans-serif;
	}

	p {
		max-width: 65ch;
	}

	img {
		display: block;
		max-width: 100%;
	}
</style>
